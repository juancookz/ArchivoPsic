@model List<Archivo>
@{
    ViewData["Title"] = "Archivos";
}

<h2>Archivos de la Sección</h2>

@if (Model.Count == 0)
{
    <p>No hay archivos en esta sección.</p>
}
else
{
    <ul>
    @foreach (var archivo in Model)
    {
        <li>
            <a href="@Url.Content("~/archivos/" + archivo.RutaArchivo)" target="_blank">@archivo.Titulo</a>
        </li>
    }
    </ul>
}