@model List<Seccion>
@{
    ViewData["Title"] = "Secciones";
}

<div class="text-center mb-4">
    <h1 class="display-4">Archivo Historia de la psicologia</h1>
    <p>Universidad Nacional de Tucuman</p>
</div>

<div class="row">
    @foreach (var seccion in Model)
    {
        if (seccion.Nombre == "Presentacion")
        {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch mb-4">
            <a href="@Url.Content("~/files/uploads/presentacion.pdf")" target="_blank" class="w-100 text-decoration-none text-dark">
                <div class="card w-100 h-100">
                    <img src="@Url.Content("~/images/secciones/" + seccion.ImagenPath)" class="card-img-top" alt="@seccion.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@seccion.Nombre</h5>
                    </div>
                </div>
            </a>
        </div>
        }
        else
        {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex align-items-stretch mb-4">
            <a asp-controller="Seccion" asp-action="ListArchivos" asp-route-id="@seccion.Id" class="w-100 text-decoration-none text-dark">
                <div class="card w-100 h-100">
                    <img src="@Url.Content("~/images/secciones/" + seccion.ImagenPath)" class="card-img-top" alt="@seccion.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@seccion.Nombre</h5>
                    </div>
                </div>
            </a>
        </div>
        }
    }
</div>
